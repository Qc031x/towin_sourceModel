@charset "utf-8";
body{
	font-family:"宋体";
}
.logo{
	width: 100%;
	height: 84px;
	color: #fff;
	margin: 0 auto;
	background-color: #027ac8;
}
.l-left{
	float: left;
	margin: 5px 0 5px 200px;
}

.l-left img{
	width: 190px;
	/*height: 90px;*/
}
.l-right{
	font-size: 40px;
	float: left;
	color: #fff;
	line-height: 83px;
	font-family: "微软雅黑";
	margin-left: 20px;
	
}
.page{
	color: #DCDCDC;
	font-size: 16px;
	width: 100%;
	height: auto;
}
.p-login{
	width: 385px;
	height: 205px;
	margin: 0 auto;
	margin-top: 150px;
	background: #1a509a;
	box-shadow: -1px 1px 10px #1a509a, -1px 10px 10px #1a509a;
}
.p-info{
	width: 80%;
}

input[type='text']{
	float: right;
	margin-right: 10px;

	
}
input[type='password']{
	float: right;
	margin-right: 10px;

}
input[type='button']{
	text-align: center;
	margin: 10px 0 0 135px;
	width: 107px;
}
.p-login-title{
	text-align: center;
	margin-bottom: 20px;
	background: #2459a7;
	font-size: 24px;
}
.p-l-user{
	height: 35px;
	margin-left: 55px;
}
.p-l-psd{
	height: 35px;
	margin-left: 55px;
}
.p-l-code{
	height: 35px;
	margin-left: 55px;
}
.bg{
	position: fixed;
	top: 0;
	left: 0;
	bottom: 0;
	right: 0;
	z-index: -1;
}
.bg img{
	width: 100%;
	height: 100%;
	border: 0;
}
